<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>
<body>
    <div class="container">
        <hr>
        <div class="card">
            <div class="card-header">
                <h2>Edição de usuário</h2>
            </div>
            <div class="card-body">
                <form method="post" action="/users/update">
                    <input class="form-control" type="email" name="email" placeholder="Atualize o email" value="<%= user.email %>"> <br>
                    <input class="form-control" type="password" name="password" placeholder="Atualize a senha" value="<%= user.password %>"> <br>
                    <input type="hidden" name="id" value="<%= user.id %>">
                    <button class="btn btn-success">Atualizar</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
